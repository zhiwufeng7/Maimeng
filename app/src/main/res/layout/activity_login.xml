<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f35f6f"
    tools:context="com.qft3.maimeng.homeModule.ui.LoginActivity">

    <TextView
        android:id="@+id/login_activity_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dengluguanbi"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/login_activity_circle_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/login_activity_login_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/denglutouxiang" />

    <LinearLayout
        android:id="@+id/login_activity_middle_ll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/login_activity_circle_view"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:text="迫不及待和你一起卖萌呢"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_activity_edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_middle_ll"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/denglu_phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="请输入手机号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/denglu_psw" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请输入密码" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/show_psw" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_activity_psw_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login_activity_edit_ll"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#ffffff" />

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginRight="6dp"
            android:background="#ffffff" />
    </LinearLayout>

    <Button
        android:id="@+id/login_activity_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_psw_ll"
        android:background="@drawable/denglu_shape"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="开始卖萌" />

    <Button
        android:id="@+id/login_activity_lregist_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_login_btn"
        android:background="@drawable/regist_shape"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="注册" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/denglu_weixin"
            android:gravity="center_vertical"
            android:text="微信登陆"
            android:textColor="#ffffff" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/denglu_qq"
            android:gravity="center_vertical"
            android:text="QQ登陆"
            android:textColor="#ffffff" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/denglu_weibo"
            android:gravity="center_vertical"
            android:text="微博登陆"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>
